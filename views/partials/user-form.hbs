<div class="row-mb-3">
    <div class="form-floating col-sm-12">
        <input type="email" class="form-control" id="floatingInput" value="{{this.email}}" placeholder="email"
            name="email">
        <label for="floatingInput">Email</label>
    </div>
</div>
<div class="row-mb-3">
    <div class="form-floating col-sm-12">
        <input type="password" class="form-control" id="floatingInput" value="{{this.password}}" placeholder="password"
            name="password">
        <label for="floatingInput">Password</label>
    </div>
</div>


<div class="col-sm-3 d-grid">
    <button class="btn btn-secondary" type="submit">Login</button>
</div>