<div class="row-mb-6">
    <div class="form-floating col-sm-5">
        <input type="hidden" value="{{group_id}}" name="group_id">
        <input type="number" min="0.00" max="5000.00" step="0.1" class="form-control" id="floatingInput"
            value="{{this.amount}}" placeholder="0.00" name="amount" required>
        <label for="floatingInput">Amount in Eur</label>
    </div>
</div>
<div class="row-mb-6">
    <div class="form-floating col-sm-5">
        <input type="text" class="form-control" id="floatingInput" value="{{this.description}}"
            placeholder="Description" name="description" maxlength="30" required>
        <label for="floatingInput">Description</label>
    </div>
</div>

<div class="col-sm-5">
    <button class="btn btn-secondary" type="submit">Add bill</button>
</div>